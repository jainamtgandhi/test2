RewriteEngine On

# Handle the future-of-supplychain route
RewriteRule ^future-of-supplychain/?$ src/apps/future-of-supplychain/future-of-supplychain.html [L]

# Handle the future-of-supplychain/ route (with trailing slash)
RewriteRule ^future-of-supplychain/$ src/apps/future-of-supplychain/future-of-supplychain.html [L]

# Handle the personas-future-of-supplychain route
RewriteRule ^personas-future-of-supplychain/?$ personas-future-of-supplychain.html [L]

# Handle the personas-future-of-supplychain/ route (with trailing slash)
RewriteRule ^personas-future-of-supplychain/$ personas-future-of-supplychain.html [L]

# Redirect www to non-www (optional)
RewriteCond %{HTTP_HOST} ^www\.heyitsjainam\.com [NC]
RewriteRule ^(.*)$ https://heyitsjainam.com/$1 [L,R=301]

# Force HTTPS (optional)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Block access to sensitive files and directories
<FilesMatch "\.(json|md|bat|ps1|py)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

<FilesMatch "^(info|projects|system)\.json$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to backup and documentation directories
RedirectMatch 403 ^/backup-rename/.*$
RedirectMatch 403 ^/ANALYTICS_SETUP\.md$
RedirectMatch 403 ^/PERMANENT_SERVER_SETUP\.md$
RedirectMatch 403 ^/codebase_assessment\.md$

# Handle 404 errors
ErrorDocument 404 /404.html

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Set cache headers
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>
